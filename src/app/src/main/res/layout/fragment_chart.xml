<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ChartFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Lịch sử"
        android:textSize="34dp"
        android:textStyle="bold"
        android:id="@+id/HistoryText"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/HistoryText"
        android:layout_marginVertical="10dp"
        android:id="@+id/DisplayCalories">
        <TextView
            android:id="@+id/TotalCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="40dp"
            android:text="Calo"
            android:textSize="32dp"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Ngày"
            android:id="@+id/TimeDurationCalories"
            android:background="@drawable/index_rounded"
            android:textAllCaps="false"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:paddingHorizontal="25dp"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="40dp"
            />
    </RelativeLayout>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/caloriesBarChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/DisplayCalories"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/caloriesBarChart"
        android:layout_marginVertical="10dp"
        android:id="@+id/DisplayWater">
        <TextView
            android:id="@+id/TotalWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="40dp"
            android:text="Nước uống"
            android:textSize="32dp"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Ngày"
            android:id="@+id/TimeDurationWater"
            android:background="@drawable/index_rounded"
            android:textAllCaps="false"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:paddingHorizontal="25dp"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="40dp"
            />
    </RelativeLayout>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/waterBarChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/DisplayWater"
        />

</RelativeLayout>